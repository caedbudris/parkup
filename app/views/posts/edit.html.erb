<%= provide(:title, 'Edit Post') %>
<div class='form'>
<h1>Edit Post</h1>
<div class="container">
    <div class='errors'>
        <% if @post.errors.full_messages.any? %>
        <h3>Stop the lift!</h3>
        <ul>
        <% @post.errors.full_messages.each do |e| %>
            <li><%= e %></li>
        <% end %>
        </ul>
        <% end %>
    </div>
    <ul>
    <%= form_for @post do |p| %>
    <li>
        <h3>Title</h3>
        <%= p.text_field :title, placeholder: "Michigan's Adventure get's Giga Coaster" %>
    </li>
    
    <li>
        <h3>Link</h3>
        <%= p.text_field :link, placeholder: 'e.g. https://theme-park-site-caedbudris.c9users.io/posts/new' %>
    </li>
        
    <li>
        <h3>Category</h3>
        <%= p.select(:category, options_for_select([['News', 'news'], ['Rumors', 'rumors'], ['Discussion', 'discussion']])) %>
    </li>
    
    <li>
        <h3>Content (optional)</h3>
        <%= p.text_area :content %>
    </li>
    
    <li>
        <%= p.submit %>
    </li>
    <% end %>
    </ul>
</div>
</div>