<div class="_post">
    <div class="rate">
        <%= form_for post do |p| %>
            <div class="ratefield">
            <%= p.text_field :rating, value: post.rating + 1 %>
            </div>
            <%= p.submit 'Upvote' %>
        <% end %>
        <h3 class='rating'><%= post.rating %><h3>
    </div>
    <div class="content">
        <h2><%= link_to post.title, post.link %></h2>
        <%= link_to 'Comments', post, class: 'comlink' %><p>posted by: User</p>
    </div>
</div>