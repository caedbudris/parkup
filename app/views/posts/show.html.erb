<%= provide :title, @post.title %>
<div class="post">    
    <div class="container">
        <div class='rate'>
            <%= form_for @post do |p| %>
                <div class="ratefield">
                <%= p.text_field :rating, value: @post.rating + 1 %>
                </div>
                <%= p.submit '' %>
            <% end %>
            <h3><%= @post.rating %></h3>
        </div>
        
        <div class='title'>
            <h1><%= link_to @post.title, @post.link %></h1>
        </div>
        
        <div class="content">
            <%= link_to 'Edit', edit_post_path, class: 'edit' %>
            <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'You sure?' }, class: 'delete'  %>
            <p><%= @post.content %></p>
        </div>
        
        <div class='comments'>
            <h3>Comments</h3>
            <% if @comments.any? %>
            <ul>
                <% @comments.each do |comment| %>
                    <li>
                        <%= render comment %>
                    </li>
                <% end %>
            </ul>
            <% end %>
        </div>
        
        <div class='form'>
            <h3>Make a Comment</h3>
            <%= form_for @comment do |c| %>
                <%= c.text_field :post_id, value: @post.id, class: 'hidden' %>
                <%= c.text_area :content %>
                <%= c.submit %>
            <% end %>
        </div>
    </div>
</div>